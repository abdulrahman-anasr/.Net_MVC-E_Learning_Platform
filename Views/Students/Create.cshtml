@model MvcE_Learning.Models.Student

@{
    ViewData["Title"] = "Create Account";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 rounded-lg overflow-hidden">
                <div class="row g-0">
                    <!-- Left Side - Illustration -->
                    <div class="col-md-6 d-none d-md-flex bg-primary-gradient align-items-center justify-content-center p-5">
                        <div class="text-center text-white">
                            <img src="https://cdn-icons-png.flaticon.com/512/3135/3135715.png" width="150" class="mb-4">
                            <h3 class="fw-bold mb-3">Join E-Learners!</h3>
                            <p class="mb-0">Start your learning journey with us today</p>
                        </div>
                    </div>

                    <!-- Right Side - Registration Form -->
                    <div class="col-md-6 p-5">
                        <div class="text-center mb-4">
                            <h1 class="h3 fw-bold gradient-text">Student Registration</h1>
                            <p class="text-muted">Create your account to access courses</p>
                        </div>

                        <form asp-action="Create" class="needs-validation" novalidate>
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <div class="form-floating mb-3">
                                <input asp-for="Name" class="form-control" id="nameInput" placeholder=" " required>
                                <label for="nameInput" asp-for="Name">Full Name</label>
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>

                            <div class="form-floating mb-3">
                                <input asp-for="Email" type="email" class="form-control" id="emailInput" placeholder=" " required>
                                <label for="emailInput" asp-for="Email">Email address</label>
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>

                            <div class="form-floating mb-3">
                                <input asp-for="Password" type="password" class="form-control" id="passwordInput" placeholder=" " required>
                                <label for="passwordInput" asp-for="Password">Password</label>
                                <span asp-validation-for="Password" class="text-danger small"></span>
                            </div>

                            <div class="form-floating mb-3">
                                <input asp-for="Age" class="form-control" id="ageInput" placeholder=" " required>
                                <label for="ageInput" asp-for="Age">Age</label>
                                <span asp-validation-for="Age" class="text-danger small"></span>
                            </div>

                            <div class="form-floating mb-3">
                                <input asp-for="AreasOfInterest" class="form-control" id="interestInput" placeholder=" ">
                                <label for="interestInput" asp-for="AreasOfInterest">Areas of Interest</label>
                                <span asp-validation-for="AreasOfInterest" class="text-danger small"></span>
                            </div>

                            <div class="form-floating mb-4">
                                <input asp-for="EducationLevel" class="form-control" id="educationInput" placeholder=" ">
                                <label for="educationInput" asp-for="EducationLevel">Education Level</label>
                                <span asp-validation-for="EducationLevel" class="text-danger small"></span>
                            </div>

                            <div class="d-grid mb-3">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="fas fa-user-plus me-2"></i> Create Account
                                </button>
                            </div>

                            <div class="text-center">
                                <p class="small">
                                    Already have an account?
                                    <a asp-action="Login" class="text-decoration-none">Login here</a>
                                </p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-primary-gradient {
        background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
    }

    .gradient-text {
        background: linear-gradient(45deg, var(--primary-color), var(--accent-color));
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
    }

    .card {
        border-radius: 1rem;
        overflow: hidden;
    }

    .form-floating label {
        color: #6c757d;
    }

    .form-control {
        padding: 1rem 0.75rem;
        border-radius: 0.5rem;
    }

        .form-control:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.25rem rgba(67, 97, 238, 0.25);
        }

    .btn-primary {
        background-color: var(--primary-color);
        border-color: var(--primary-color);
    }

        .btn-primary:hover {
            background-color: var(--primary-dark-color);
            border-color: var(--primary-dark-color);
        }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Form validation
        (function () {
            'use strict'

            var forms = document.querySelectorAll('.needs-validation')

            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }

                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
}