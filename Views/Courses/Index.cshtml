@model MvcE_Learning.Models.CourseViewModel

@{
    ViewData["Title"] = "Index";
    var role = Context.Request.Cookies["Role"];
    var name = Context.Request.Cookies["Name"];
    var id = Context.Request.Cookies["Id"];
}

<h1>Index</h1>


<form asp-controller="Courses" asp-action="Index" method="get">
    <p>

        <select asp-for="CourseFields" asp-items="Model.Fields">
            <option value="">All</option>
        </select>

        <label>Title: <input type="text" asp-for="SearchString" /></label>
        <input type="submit" value="Search" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Course![0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course![0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course![0].Duration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course![0].Difficulty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course![0].Fields)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course![0].Rating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Course!) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Difficulty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fields)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            @if(role == "Student")
             {
                 <td>
                <a asp-controller="Students" asp-action="Enroll" asp-route-id="@item.CourseId">Enroll</a>
                 </td>
             }
        </tr>
}
    </tbody>
</table>
