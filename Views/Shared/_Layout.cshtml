@{
    var role = Context.Request.Cookies["Role"];  // Get the Role cookie
    var name = Context.Request.Cookies["Name"];  // Get the Name cookie
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E-Learners Website</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MvcE_Learning/.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">E-Learners Website</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-2">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Courses" asp-action="Index">Courses</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        @if(!string.IsNullOrEmpty(role) && role == "Instructor")
                        {
                            <li class="nav-item" position="absolute" padding-left=100px>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Instructors" asp-action="Home">Instructor Dashboard</a>
                            </li>
                            <li class="nav-item" position="absolute" padding-left=100px>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Instructors" asp-action="LogOut">Sign Out</a>
                            </li>
                        }
                        else if (!string.IsNullOrEmpty(role) && role == "Student")
                        {
                            <li class="nav-item" position="absolute" padding-left=100px>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Students" asp-action="Home">Student Dashboard</a>
                            </li>
                            <li class="nav-item" position="absolute" padding-left=100px>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Students" asp-action="LogOut">Sign Out</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item" position="absolute" padding-left=100px>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="LoginPageOption">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @if (role == "Instructor" && !string.IsNullOrEmpty(name))
            {
                <div class="alert alert-success" role="alert">
                    Welcome, @name!
                </div>
            }
            else if (role == "Student" && !string.IsNullOrEmpty(name))
            {
                <div class="alert alert-success" role="alert">
                    Welcome, @name!
                </div>
            }
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - E Learners - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
